{
	"manifest_version": 2,
	"name": "Tab Saver",
	"version": "1.0",

	"description": "Saves your tabs when you close a window so that they can be restored later",
	"icons": {
		"32": "icons/logo.svg",
		"48": "icons/logo.svg",
		"96": "icons/logo.svg",
		"128": "icons/logo.svg"
	},
	"background": {
		"scripts": [ "background/background.js" ]
	},
	"browser_action": {
		"default_icon": "icons/icon.svg",
		"default_title": "Tab Saver",
		"default_popup": "popup/src/popup.html"
	},
	"web_accessible_resources": [
		"popup/res/*",
		"popup/src/templates/*"
	],
	"permissions": [
		"activeTab",
		"storage",
		"tabs"
	],
	"applications": {
		"gecko": {
			"id": "TabSaver@sploingone.com"
		}
	}
}