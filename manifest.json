{
	"manifest_version": 2,
	"name": "Tab Saver",
	"version": "1.0",

	"description": "Saves your tabs when you close a window so that they can be restored later",
	"icons": {
		"32": "icons/tab_saver_icon.svg",
		"48": "icons/tab_saver_icon.svg",
		"96": "icons/tab_saver_icon.svg",
		"128": "icons/tab_saver_icon.svg"
	},
	"background": {
		"scripts": [ "background/tab_saver_background.js" ]
	},
	"browser_action": {
		"default_icon": "icons/tab_saver_icon.svg",
		"default_title": "Tab Saver",
		"default_popup": "popup/tab_saver_popup.html"
	},
	"web_accessible_resources": [
		"popup/tab_saver_entry.html.template",
		"popup/*.svg"
	],
	"permissions": [
		"activeTab",
		"storage",
		"tabs"
	],
	"applications": {
		"gecko": {
			"id": "TabSaver@sploingone.com"
		}
	}
}